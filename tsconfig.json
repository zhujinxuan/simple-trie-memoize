{
  "compilerOptions": {
    "target": "es6",
    "lib":    ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
